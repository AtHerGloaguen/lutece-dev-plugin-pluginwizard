<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-2.5.xsd">
    
    <!-- package pluginwizard -->
    <bean id="pluginwizard.pluginModelDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.PluginModelDAO" />  
    <bean id="pluginwizard.pluginPortletDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.PortletDAO" />
    <bean id="pluginwizard.pluginApplicationDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.ApplicationDAO" />
    <bean id="pluginwizard.pluginFeatureDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.FeatureDAO" />
    <bean id="pluginwizard.businessClassDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.BusinessClassDAO" />
    <bean id="pluginwizard.resourceKeyDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.ResourceKeyDAO" />
    <bean id="pluginwizard.attributeDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.AttributeDAO" />
    
    <!-- Back Office Config management -->
    <bean id="pluginwizard.configurationKeyDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.ConfigurationKeyDAO" />  
    <bean id="pluginwizard.localizationKeyDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.LocalizationKeyDAO" />  

    
    <bean id="pluginwizard.generator.jspBeanClassic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.MultiJspBeanGenerator">
        <property name="template">/skin/plugins/pluginwizard/templates/pluginwizard_jspbean_business_template.html</property>
    </bean>
    
    <bean id="pluginwizard.list1" class="fr.paris.lutece.plugins.pluginwizard.service.GeneratorsList" >
        <property name="name">Génération Classique (modèle core)</property>
        <property name="generatorsList">
            <list>
                <ref bean="pluginwizard.generator.jspBeanClassic" />
            </list>
        </property>
    </bean>
    
</beans>