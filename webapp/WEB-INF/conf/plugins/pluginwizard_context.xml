        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/default/portlet/gt_portlet_class.html</value>
        </property>
    </bean>
    <bean id="pluginwizard.portlet.dao" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="suffix">
            <value>DAO</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/default/portlet/gt_portlet_dao.html</value>
        </property>
    </bean>
    <bean id="pluginwizard.portlet.idao" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="prefix">
            <value>I</value>
        </property>
        <property name="suffix">
            <value>DAO</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/default/portlet/gt_portlet_idao.html</value>
        </property>
    </bean>    
    <bean id="pluginwizard.portlet.home" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="suffix">
            <value>Home</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/default/portlet/gt_portlet_home.html</value>
        </property>
    </bean>
    <!-- TODO -->
    <bean id="pluginwizard.generator.portlet.java.jspbean" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PortletJspBeanGenerator" >
