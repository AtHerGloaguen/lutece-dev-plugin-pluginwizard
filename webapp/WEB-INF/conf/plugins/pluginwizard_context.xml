<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-2.5.xsd">
    
    <!-- package pluginwizard -->
    <bean id="pluginwizard.modelDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.ModelDAO" />  
    <bean id="pluginwizard.pluginModelDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.PluginModelDAO" />  
    <bean id="pluginwizard.resourceKeyDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.model.ResourceKeyDAO" />
    
    <!-- Back Office Config management -->
    <bean id="pluginwizard.configurationKeyDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.ConfigurationKeyDAO" />  
    <bean id="pluginwizard.localizationKeyDAO"  class="fr.paris.lutece.plugins.pluginwizard.business.LocalizationKeyDAO" />  

    <bean id="pluginwizard.business.class.classic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/classic/gt_business_class_classic.html</value>
        </property>
    </bean>
    
    <bean id="pluginwizard.business.dao.classic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="suffix">
            <value>DAO</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/classic/gt_business_dao_classic.html</value>
        </property>
    </bean>
    
    <bean id="pluginwizard.business.idao.classic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="prefix">
            <value>I</value>
        </property>
        <property name="suffix">
            <value>DAO</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/classic/gt_business_idao_classic.html</value>
        </property>
    </bean>
    
    <bean id="pluginwizard.business.home.classic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="suffix">
            <value>Home</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/classic/gt_business_home_classic.html</value>
        </property>
    </bean>
    
    <bean id="pluginwizard.business.test" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessFileConfig">
        <property name="suffix">
            <value>BusinessTest</value>
        </property>
        <property name="sourcePath">
            <value>src/test</value>
        </property>
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/commons/gt_business_test.html</value>
        </property>
    </bean>
    
    <bean id="pluginwizard.list.files.business.classic" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="pluginwizard.business.class.classic" />
                <ref bean="pluginwizard.business.dao.classic" />                
                <ref bean="pluginwizard.business.idao.classic" />                
                <ref bean="pluginwizard.business.home.classic" />                
                <ref bean="pluginwizard.business.test" />                
            </list>
        </constructor-arg>
    </bean>
    
    <!-- Plugins files -->
    <bean id="pluginwizard.generator.pom" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PomGenerator" />
    <bean id="pluginwizard.generator.pluginXml" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PluginXmlGenerator" />
    <bean id="pluginwizard.generator.context" class="fr.paris.lutece.plugins.pluginwizard.service.generator.SpringContextXmlGenerator" />
    <bean id="pluginwizard.generator.properties" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PropertiesGenerator" />
    <bean id="pluginwizard.generator.resources" class="fr.paris.lutece.plugins.pluginwizard.service.generator.ResourcesGenerator" />
    <bean id="pluginwizard.generator.sql" class="fr.paris.lutece.plugins.pluginwizard.service.generator.SqlCodeGenerator" />
    
    <!-- Admin features generators -->
    <bean id="pluginwizard.generator.admin.java.business.classic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.BusinessClassGenerator" >
        <property name="files"><ref bean="pluginwizard.list.files.business.classic" /></property>
    </bean>
    
    <bean id="pluginwizard.generator.admin.jsp" class="fr.paris.lutece.plugins.pluginwizard.service.generator.AdminJspGenerator" />
    <bean id="pluginwizard.generator.admin.html" class="fr.paris.lutece.plugins.pluginwizard.service.generator.AdminTemplateGenerator" >
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/commons/gt_html_admin.html</value>
        </property>
        <property name="tabsTemplate">
            <value>/skin/plugins/pluginwizard/generators/commons/gt_html_admin_tabs.html</value>
        </property>
    </bean>

    <bean id="pluginwizard.generator.admin.java.jspbean.classic" class="fr.paris.lutece.plugins.pluginwizard.service.generator.AdminJspBeanGenerator" >
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/classic/gt_jspbean_admin_classic.html</value>
        </property>
    </bean>
    <bean id="pluginwizard.generator.admin.java.jspbean.alternative" class="fr.paris.lutece.plugins.pluginwizard.service.generator.AdminJspBeanGenerator" >
        <property name="template">
            <value>/skin/plugins/pluginwizard/generators/alternative/gt_jspbean_admin_alternative.html</value>
        </property>
    </bean>
    
    <!-- XPage -->
    <bean id="pluginwizard.generator.xpage.java" class="fr.paris.lutece.plugins.pluginwizard.service.generator.XPageGenerator" />
    
    <!-- Portlet -->
    <bean id="pluginwizard.generator.portlet.java.business" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PortletGenerator" />
    <bean id="pluginwizard.generator.portlet.java.jspbean" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PortletJspBeanGenerator" />
    <bean id="pluginwizard.generator.portlet.jsp" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PortletJspGenerator" />
    <bean id="pluginwizard.generator.portlet.html" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PortletTemplateGenerator" />
    <bean id="pluginwizard.generator.portlet.xsl" class="fr.paris.lutece.plugins.pluginwizard.service.generator.PortletXslGenerator" />

    
    <bean id="pluginwizard.scheme1" class="fr.paris.lutece.plugins.pluginwizard.service.generator.GenerationScheme" >
        <property name="name">
            <value>Classique (Modèle Core : DAO SQL)</value>
        </property>
        <property name="generatorsList">
            <list>
                <ref bean="pluginwizard.generator.pom" />
                <ref bean="pluginwizard.generator.pluginXml" />
                <ref bean="pluginwizard.generator.context" />
                <ref bean="pluginwizard.generator.properties" />
                <ref bean="pluginwizard.generator.resources" />
                <ref bean="pluginwizard.generator.sql" />
                <ref bean="pluginwizard.generator.admin.java.business.classic" />
                <ref bean="pluginwizard.generator.admin.java.jspbean.classic" />
                <ref bean="pluginwizard.generator.admin.jsp" />
                <ref bean="pluginwizard.generator.admin.html" />
                <ref bean="pluginwizard.generator.xpage.java" />
                <ref bean="pluginwizard.generator.portlet.java.business" />
                <ref bean="pluginwizard.generator.portlet.java.jspbean" />
                <ref bean="pluginwizard.generator.portlet.jsp" />
                <ref bean="pluginwizard.generator.portlet.html" />
                <ref bean="pluginwizard.generator.portlet.xsl" />
            </list>
        </property>
    </bean>

    <bean id="pluginwizard.scheme2" class="fr.paris.lutece.plugins.pluginwizard.service.generator.GenerationScheme" >
        <property name="name">
            <value>Modèle BeanUtils + DAO SQL</value>
        </property>
        <property name="generatorsList">
            <list>
                <ref bean="pluginwizard.generator.pom" />
                <ref bean="pluginwizard.generator.pluginXml" />
                <ref bean="pluginwizard.generator.context" />
                <ref bean="pluginwizard.generator.properties" />
                <ref bean="pluginwizard.generator.resources" />
                <ref bean="pluginwizard.generator.sql" />
                <ref bean="pluginwizard.generator.admin.java.business.classic" />
                <ref bean="pluginwizard.generator.admin.java.jspbean.alternative" />
                <ref bean="pluginwizard.generator.admin.jsp" />
                <ref bean="pluginwizard.generator.admin.html" />
                <ref bean="pluginwizard.generator.xpage.java" />
                <ref bean="pluginwizard.generator.portlet.java.business" />
                <ref bean="pluginwizard.generator.portlet.java.jspbean" />
                <ref bean="pluginwizard.generator.portlet.jsp" />
                <ref bean="pluginwizard.generator.portlet.html" />
                <ref bean="pluginwizard.generator.portlet.xsl" />
            </list>
        </property>
    </bean>

    <bean id="pluginwizard.scheme3" class="fr.paris.lutece.plugins.pluginwizard.service.generator.GenerationScheme" >
        <property name="name">
            <value>Modèle BeanUtils + DAO JPA</value>
        </property>
        <property name="generatorsList">
            <list>
                <ref bean="pluginwizard.generator.pom" />
                <ref bean="pluginwizard.generator.pluginXml" />
                <ref bean="pluginwizard.generator.context" />
                <ref bean="pluginwizard.generator.properties" />
                <ref bean="pluginwizard.generator.resources" />
                <ref bean="pluginwizard.generator.sql" />
                <ref bean="pluginwizard.generator.admin.java.business.classic" />
                <ref bean="pluginwizard.generator.admin.java.jspbean.alternative" />
                <ref bean="pluginwizard.generator.admin.jsp" />
                <ref bean="pluginwizard.generator.admin.html" />
                <ref bean="pluginwizard.generator.xpage.java" />
                <ref bean="pluginwizard.generator.portlet.java.business" />
                <ref bean="pluginwizard.generator.portlet.java.jspbean" />
                <ref bean="pluginwizard.generator.portlet.jsp" />
                <ref bean="pluginwizard.generator.portlet.html" />
                <ref bean="pluginwizard.generator.portlet.xsl" />
            </list>
        </property>
    </bean>
        
                
</beans>